{{page-title "Locations"}}

<AppointmentContainer
  @step="2"
  @serviceDuration={{duration this.serviceDuration}}
  @serviceType={{this.serviceType}}
>
  <ul class="location-list">
    {{#each @model.locations as |location|}}
      <li>
        <div class="thumb">
          {{#if location.isVideo}}
            👨🏻‍💻
          {{else}}
            🗺
          {{/if}}
        </div>

        <h4>{{location.name}}</h4>
        <h5>{{location.phone}}</h5>

        <button {{on "click" this.select}}>Select</button>
      </li>
    {{/each}}
  </ul>
</AppointmentContainer>
